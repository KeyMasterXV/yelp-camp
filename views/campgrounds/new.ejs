<% include ../partials/header %>

<h1>Create a New Campground</h1>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cost" placeholder="cost" required>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>                
            </form>

            <a href="/campgrounds">Back to Campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>